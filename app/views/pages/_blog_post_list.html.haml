#blog-posts
  - @blog_posts.each do |post|
    .blog_post
      %h2#post-title
        = link_to post.title, blog_post_path(post.slug)
      - if post.subtitle
        %h3#post-subtitle= post.subtitle
      #post-date
        = format_date(post.created_at)
      #post-preview
        = @markdown.render(post.preview).html_safe
      = link_to "Continue reading", blog_post_path(post.slug)

    %hr
