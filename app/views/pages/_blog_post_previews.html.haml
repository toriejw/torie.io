#blog-posts
  - @blog_posts.each do |post|
    .blog_post
      %h2#post-title
        = link_to post.title, blog_post_path(post.slug)
      #post-date
        = format_date(post.created_at)

      #post-preview
        = @markdown.render(post.preview).html_safe
      = link_to "Contine reading", blog_post_path(post.slug)
      %br
      %br
      %hr
